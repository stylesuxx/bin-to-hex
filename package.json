{
  "name": "ecma-library-template",
  "author": "Chris L. <stylesuxx@gmail.com>",
  "description": "A minimal template for nodeJS libraries including linting and tests",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "esbuild": "^0.15.3",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "lint": "eslint ./src ./test",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "build": "rm -rf dist && yarn run build:common && yarn run build:types",
    "pre-publish": "yarn lint && yarn test && rm -rf lib && yarn build",
    "build:common": "esbuild ./src/index.js --format=esm --bundle --outfile=./dist/index.js --platform=node --minify",
    "build:types": "tsc --declaration --emitDeclarationOnly"
  },
  "engines": {
    "node": ">=v16.16.0"
  }
}
